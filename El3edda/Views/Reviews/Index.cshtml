@model IEnumerable<El3edda.Models.Review>

@{
    ViewData["Title"] = "Index";
}

<h1 style="margin-left:3%;">Reviews</h1>

<p style="margin-left:3%;">
    <a asp-action="Create" class="btn btn-success text-white">Create New</a>
</p>

<div class="container">
<table class="table table-striped">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.CustomerName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Rate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Feedback)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Mobile)
            </th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
            @foreach (var item in Model) {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.CustomerName)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Rate)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Feedback)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Mobile.Name)
                        </td>
                        <td style="width:15%">
                            <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-dark text-white">Edit</a> |
                            <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger text-white">Delete</a>
                        </td>
                    </tr>
            }
    </tbody>
</table>
</div>
