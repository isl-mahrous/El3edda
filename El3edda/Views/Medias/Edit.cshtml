@model El3edda.Models.Media


@{
    ViewData["Title"] = "Edit";
    IEnumerable<El3edda.Models.Mobile> mobiles = new List<Mobile>();
    mobiles = (List<El3edda.Models.Mobile>)ViewBag.mobiles;
}

<h1>Edit</h1>

<h4>Media</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="All" class="text-danger"></div>
            <input type="hidden" asp-for="Id" value="@Model.Id"/>
            <div class="form-group">
                <label asp-for="Type" class="control-label"></label>
                <select asp-for="Type" asp-items="Html.GetEnumSelectList(typeof(MediaType))" class="form-control" ></select >
                <span asp-validation-for="Type" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="URL" class="control-label"></label>
                <input asp-for="URL" class="form-control" value="@Model.URL"/>
                <span asp-validation-for="URL" class="text-danger"></span>
            </div>

            <select class="form-select form-select-lg mb-3 mt-3" name="MobileId" >

                @foreach(var mob in mobiles)
                {
                    if(mob.Id == Model.Id)
                    {
                        <option value="@mob.Id" selected>@mob.Name</option>
                    }
                    else
                    {
                        <option value="@mob.Id">@mob.Name</option>
                    }
                }

            </select>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index" class="btn btn-secondry mt-3">Back to List</a>
</div>



@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
