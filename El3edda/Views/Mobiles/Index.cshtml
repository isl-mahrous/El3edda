@model IEnumerable<El3edda.Models.Mobile>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create" class="btn btn-secondary mt-3">Create New</a>
</p>


<div class="d-flex flex-row justify-content-center flex-wrap mr-5">

        @foreach(var mob in Model)
        {
            @*string imgsrcpath = "Images/" + mob.;*@

          <div class="card" style="width: 18rem; margin: 1% 1%">
            <img class="card-img-top" src=@mob.MainPhotoURL alt="Card image cap">
            <div class="card-body">
                <h5 class="card-title">@mob.Name</h5>
                <p class="card-text">$ @mob.Price</p>
                <p class="card-text">Release Date @mob.ReleaseDate.ToString("dd-mm-yyyy")</p>
            </div>

              <ul class="list-group list-group-flush list-unstyled">
                <a asp-action="Details" asp-route-id="@mob.Id" class="btn btn-primary mt-3">Specifications</a>
                
                <a asp-controller="Orders" asp-action="AddItemToShoppingCart" asp-route-id="@mob.Id" class="btn btn-success text-white @((mob.UnitsInStock < 0) ? "disabled" : "")">
                                    <i class="bi bi-cart-plus"></i> Add to Cart (Price @mob.Price.ToString("c"))
                                </a>
              </ul>

              <div class="card-body">
                <a asp-action="Edit" asp-route-id="@mob.Id"  class="btn btn-dark mt-3">Edit</a>
                <a asp-action="Delete" asp-route-id="@mob.Id" class="btn btn-danger mt-3">Delete</a>
              </div>

            </div>
        }
</div>



