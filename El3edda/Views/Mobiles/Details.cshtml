@model El3edda.Models.Mobile

@{
    ViewData["Title"] = "Details";
    var medias = (List<Media>)ViewBag.Media;
}

<h1>Details</h1>

<div>
    <h4>Mobile</h4>
    <hr />
    <div class="row d-flex">
        <div class="col-4">
            <dt class = "col-sm-5 mt-3">
                @Html.DisplayNameFor(model => model.Name)
            </dt>
            <dd class = "col-sm-5">
                @Html.DisplayFor(model => model.Name)
            </dd>
            <dt class = "col-sm-5 mt-3">
                @Html.DisplayNameFor(model => model.ReleaseDate)
            </dt>
            <dd class = "col-sm-5">
                @Html.DisplayFor(model => model.ReleaseDate)
            </dd>
            <dt class = "col-sm-5 mt-3">
                @Html.DisplayNameFor(model => model.Price)
            </dt>
            <dd class = "col-sm-5">
                @Html.DisplayFor(model => model.Price)
            </dd>
            <dt class = "col-sm-5 mt-3">
                @Html.DisplayNameFor(model => model.Description)
            </dt>
            <dd class = "col-sm-12">
                @Html.DisplayFor(model => model.Description)
            </dd>
            <dt class = "col-sm-5 mt-3">
                @Html.DisplayNameFor(model => model.WarrantyPeriod)
            </dt>
            <dd class = "col-sm-5">
                @Html.DisplayFor(model => model.WarrantyPeriod)
            </dd>

            <dt class = "col-sm-5 mt-3">
                @Html.DisplayNameFor(model => model.UnitsInStock)
            </dt>
            <dd class = "col-sm-5">
                @Html.DisplayFor(model => model.UnitsInStock)
            </dd>

            <dt class = "col-sm-5 mt-3">
                @Html.DisplayNameFor(model => model.UnitsSold)
            </dt>
            <dd class = "col-sm-5">
                @Html.DisplayFor(model => model.UnitsSold)
            </dd>
                <dt class = "col-sm-5 mt-3">
                @Html.DisplayNameFor(model => model.Manufacturer)
            </dt>
            <dd class = "col-sm-5">
                @Html.DisplayFor(model => model.Manufacturer.Name)
            </dd>

        </div>

        <div class="col-4">

            <dt class = "col-sm-2 mt-3">
                    @Html.DisplayNameFor(model => model.Specs.BatteryCapacity)
            </dt>
             <dd class = "col-sm-10">
                    @Html.DisplayFor(model => model.Specs.BatteryCapacity)
            </dd>
             <dt class = "col-sm-2 mt-3">
                    @Html.DisplayNameFor(model => model.Specs.CameraMegaPixels)
            </dt>
            <dd class = "col-sm-10">
                    @Html.DisplayFor(model => model.Specs.CameraMegaPixels)
            </dd>
            <dt class = "col-sm-2 mt-3">
                    @Html.DisplayNameFor(model => model.Specs.Color)
            </dt>
            <dd class = "col-sm-10">
                    @Html.DisplayFor(model => model.Specs.Color)
            </dd>
             <dt class = "col-sm-2 mt-3">
                    @Html.DisplayNameFor(model => model.Specs.CPU)
            </dt>
            <dd class = "col-sm-10">
                    @Html.DisplayFor(model => model.Specs.CPU)
            </dd>
            <dt class = "col-sm-2 mt-3">
                    @Html.DisplayNameFor(model => model.Specs.Height)
            </dt>

             <dd class = "col-sm-10">
                    @Html.DisplayFor(model => model.Specs.Height)
            </dd>
            <dt class = "col-sm-2 mt-3">
                    @Html.DisplayNameFor(model => model.Specs.Width)
            </dt>

            <dd class = "col-sm-10">
                    @Html.DisplayFor(model => model.Specs.Width)
            </dd>
            <dt class = "col-sm-2 mt-3">
                    @Html.DisplayNameFor(model => model.Specs.Thickness)
            </dt>
            <dd class = "col-sm-10">
                    @Html.DisplayFor(model => model.Specs.Thickness)
            </dd>
            <dt class = "col-sm-2 mt-3">
                    @Html.DisplayNameFor(model => model.Specs.OS)
            </dt>
            <dd class = "col-sm-10">
                    @Html.DisplayFor(model => model.Specs.OS)
            </dd>
            <dt class = "col-sm-2 mt-3">
                    @Html.DisplayNameFor(model => model.Specs.Screen)
            </dt>
             <dd class = "col-sm-10">
                    @Html.DisplayFor(model => model.Specs.Screen)
            </dd>
             <dt class = "col-sm-2 mt-3">
                    @Html.DisplayNameFor(model => model.Specs.Weight)
            </dt>
            <dd class = "col-sm-10">
                    @Html.DisplayFor(model => model.Specs.Weight)
            </dd>
        </div>

        <div id="carouselExampleIndicators" class="carousel slide col-4 text-center" data-ride="carousel">
              
              <ol class="carousel-indicators">
                    <li data-target="#carouselExampleIndicators" data-slide-to="0" class="active"></li>
                    <li data-target="#carouselExampleIndicators" data-slide-to="1"></li>
                    <li data-target="#carouselExampleIndicators" data-slide-to="2"></li>
              </ol>
              
              <div class="carousel-inner">

                    <div class="carousel-item active text-center">
                      <img class="d-block w-100" src=@Model.MainPhotoURL alt="First slide">
                    </div>
                
                    @foreach(var med in medias)
                    {
                        <div class="carousel-item">

                          <img class="d-block w-100" src=@med.URL alt="">
                        
                        </div>
                    }
                
              </div>

                  <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
                      <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                      <span class="sr-only">Previous</span>
                  </a>

                  <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
                      <span class="carousel-control-next-icon" aria-hidden="true"></span>
                      <span class="sr-only">Next</span>
                  </a>
        
              </div>
        </div>
        
<div>
    <a asp-action="ViewSpecs" class="btn btn-primary mt-3" asp-route-id="@Model?.Id">View Specs</a> |
    <a asp-action="Index" class="btn btn-dark mt-3">Back to List</a> |
    <a asp-controller="Orders" asp-action="AddItemToShoppingCart" 
    asp-route-id="@Model.Id" class="mt-3 btn btn-success text-white @((Model.UnitsInStock < 0) ? "disabled" : "")">
                                    <i class="bi bi-cart-plus"></i> Add to Cart (Price @Model.Price.ToString("c")) </a>
                                    | <a asp-action="Edit" class="btn btn-warning mt-3" asp-route-id="@Model?.Id">Edit</a>

</div>


</div>


 
     <script>
    
        $("#carouselExampleIndicators").carousel(
            {
                interval: 1500;
            });
    
    </script>