@using El3edda.Data.ViewModels
@model LoginVM;

@{
    ViewData["Title"] = "Login";
}

@if(User.Identity.IsAuthenticated && User.IsInRole(UserRoles.Admin))
{
   
}


<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.1.1/css/all.min.css" integrity="sha512-KfkfwYDsLkIlwQp6LFnl8zNdLGxu9YAA1QvwINks4PhcElQSvqcyVLLD9aMhXd13uQjoXtEKNosOWaZqXgel0g==" crossorigin="anonymous" referrerpolicy="no-referrer" />
<section style="height: 80vh; margin-top: 10vh">
  <div class="container-fluid ">
    <div class="row d-flex justify-content-center align-items-center ">
      <div class="col-md-9 col-lg-6 col-xl-5">
        <img src="https://blogs.iadb.org/conocimiento-abierto/wp-content/uploads/sites/10/2021/03/3-5-21-Innovacio%CC%81n-pedago%CC%81gica-en-cursos-MOOC.jpg" class="img-fluid"
          alt="Sample image">
      </div>
      <div class="col-md-8 col-lg-6 col-xl-4 offset-xl-1">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
          <div class="d-flex flex-row align-items-center justify-content-center justify-content-lg-start">
            <p class="lead fw-normal mb-0 me-3">Sign in with</p>
            <form method="post" asp-action="ExternalLogin" asp-route-returnUrl=@Model.ReturnUrl>
                <div>
                    @foreach(var provider in Model.ExternalLogins)
                    {
                        <button type="submit" class="btn btn-primary btn-floating mx-1" name = "provider" value="@provider.Name" >
                          <i class="fab fa-facebook-f"></i>
                        </button>           
                    }
                     
                </div>
            </form>
          </div>

        <form asp-action="Login">
          <div class="divider d-flex align-items-center my-4">
            <p class="text-center fw-bold mx-3 mb-0">Or</p>
          </div>

          <!-- Email input -->
          <div class="form-outline mb-4">
            <label class="form-label" asp-for="Email"></label>
            <input asp-for="Email" class="form-control form-control-lg"
              placeholder="Enter a valid email address" />
             <span asp-validation-for="Email" class="text-danger"></span>
          </div>

          <!-- Password input -->
          <div class="form-outline mb-3">
            <label class="form-label" asp-for="Password"></label>
            <input asp-for="Password" type="password"  class="form-control form-control-lg"
              placeholder="Enter password" />
             <span asp-validation-for="Password" class="text-danger"></span>
          </div>
          <div class="text-center text-lg-start mt-4 pt-2">
            <input type="submit" class="btn btn-dark btn-lg" style="padding-left: 2.5rem; padding-right: 2.5rem;" value="Submit"/>
            <p class="small fw-bold mt-2 pt-1 mb-0">Don't have an account? <a asp-action="Register"
                class="link-danger">Register</a></p>
          </div>
        </form>
      </div>
    </div>
  </div>
</section>